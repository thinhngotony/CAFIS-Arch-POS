<UserControl x:Class="WPSaturnEMoney.Views.Screen_emM_HRESJ"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPSaturnEMoney.Views"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">
    
    <Grid Background="{Binding BackgroundColor}">
        <ContentControl Template="{StaticResource Header}" VerticalAlignment="Top" Height="65" />
        <ContentControl Template="{StaticResource Footer}" VerticalAlignment="Bottom" Height="65" />

        <Label Content="カード履歴照会" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,90,0,0"
               Foreground="{Binding TitleColor}" FontFamily="MS Gothic" FontSize="44" />

        <Label Content="完了しました。" VerticalAlignment="Center" HorizontalAlignment="Center"
               Foreground="{Binding BodyTextColor}" FontFamily="Meiryo" FontSize="60" />

        <Button VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,78" Width="410" Height="105"
                Command="{Binding GoToScreen_emM_HJG_Command}" Content="OK" FontSize="44"
                Style="{StaticResource NormalButtonStyle}">
        </Button>
    </Grid>
</UserControl>
